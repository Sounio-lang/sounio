{
  "name": "sounio-playground",
  "version": "0.1.0",
  "description": "Web-based playground for the Sounio programming language",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "build:wasm": "cd ../compiler && cargo build --target wasm32-unknown-unknown --release --features wasm && wasm-bindgen ../target/wasm32-unknown-unknown/release/sounio_compiler.wasm --out-dir ../playground/dist --target web"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/lz-string": "^1.5.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-wasm": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "sounio",
    "programming-language",
    "playground",
    "wasm",
    "monaco-editor"
  ],
  "author": "Sounio Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sounio-lang/sounio.git",
    "directory": "playground"
  },
  "homepage": "https://sounio-lang.github.io/playground"
}
