{
  "name": "sounio-vscode",
  "displayName": "Sounio Language Support",
  "description": "Language support for the Sounio programming language",
  "version": "0.1.0",
  "publisher": "sounio",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sounio-lang/sounio"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "sounio",
    "scientific computing",
    "effect system",
    "linear types",
    "units of measure"
  ],
  "activationEvents": [
    "onLanguage:sounio"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sounio",
        "aliases": [
          "Sounio",
          "sounio"
        ],
        "extensions": [
          ".d",
          ".sio"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sounio",
        "scopeName": "source.sounio",
        "path": "./syntaxes/sounio.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sounio",
      "properties": {
        "sounio.serverPath": {
          "type": "string",
          "default": "sounio-lsp",
          "description": "Path to the Sounio language server executable"
        },
        "sounio.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        },
        "sounio.inlayHints.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inlay hints"
        },
        "sounio.inlayHints.typeHints": {
          "type": "boolean",
          "default": true,
          "description": "Show type hints for let bindings"
        },
        "sounio.inlayHints.effectHints": {
          "type": "boolean",
          "default": true,
          "description": "Show effect hints for function calls"
        },
        "sounio.inlayHints.unitHints": {
          "type": "boolean",
          "default": true,
          "description": "Show unit type hints"
        },
        "sounio.checkOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run type checking on save"
        }
      }
    },
    "commands": [
      {
        "command": "sounio.restartServer",
        "title": "Sounio: Restart Language Server"
      },
      {
        "command": "sounio.showHir",
        "title": "Sounio: Show HIR"
      },
      {
        "command": "sounio.showHlir",
        "title": "Sounio: Show HLIR"
      },
      {
        "command": "sounio.runFile",
        "title": "Sounio: Run Current File"
      },
      {
        "command": "sounio.runFileJit",
        "title": "Sounio: Run Current File (JIT)"
      }
    ],
    "keybindings": [
      {
        "command": "sounio.runFile",
        "key": "f5",
        "when": "editorLangId == sounio"
      },
      {
        "command": "sounio.runFileJit",
        "key": "shift+f5",
        "when": "editorLangId == sounio"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "effect",
        "description": "Effect type (IO, Mut, etc.)"
      },
      {
        "id": "unit",
        "description": "Unit of measure (kg, mL, etc.)"
      },
      {
        "id": "refinement",
        "description": "Refinement type predicate"
      },
      {
        "id": "lifetime",
        "description": "Lifetime parameter"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "mutable",
        "description": "Mutable binding"
      },
      {
        "id": "linear",
        "description": "Linear type (must be consumed exactly once)"
      },
      {
        "id": "affine",
        "description": "Affine type (can be consumed at most once)"
      },
      {
        "id": "unsafe",
        "description": "Unsafe code"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "effect": ["entity.name.type.effect.sounio"],
          "unit": ["constant.numeric.unit.sounio"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
